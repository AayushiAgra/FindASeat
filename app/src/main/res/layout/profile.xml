<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:backgroundTint="#F9F9F9"
    android:backgroundTintMode="add"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".LogIn">
    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            app:srcCompat="@drawable/seatlogo"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:fontFamily="@font/dmsans"
            android:text="Your Profile" />
    </LinearLayout>
    <androidx.cardview.widget.CardView
    android:layout_width="350dp"
        app:cardElevation="10dp"
    android:layout_height="225dp"
    app:cardCornerRadius="21dp">
    <ImageView
        android:id="@+id/uscidpic"
        android:layout_width="350dp"
        android:layout_height="225dp"
        app:cornerRadius = "15dp"
        app:srcCompat="@drawable/uscid"
        />
        <TextView
            android:id="@+id/studentname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textSize="18sp"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="110dp"
            android:textStyle="bold"
            android:text="AAYUSHI AGRAWAL" />
        <LinearLayout
            android:layout_marginTop="140dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/studentid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="110dp"
                android:text="3162222359" />
            <TextView
                android:id="@+id/studentaffil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:text="STUDENT" />
        </LinearLayout>
        <ImageView
            android:background="@color/white"
            android:id="@+id/personpic"
            android:layout_width="62dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="95dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/temp"

            />
</androidx.cardview.widget.CardView>
    <ScrollView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="290dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="0dp"
                android:layout_height="1dp"
                android:id="@+id/separator"
                android:visibility="visible"
                android:background="#868686"/>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Reservation"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:textSize="15dp"
                        android:fontFamily="@font/dmsans">
                    </TextView>
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="200dp"
                        app:srcCompat="@drawable/uparrow"
                        />

                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"

                    app:cardUseCompatPadding="true"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="9dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id = "@+id/currentreservationbox"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/currentreservationtoggle"
                            android:layout_width="14dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="10dp"
                            app:srcCompat="@drawable/uparrow"
                            />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Taper Hall"
                                android:textStyle="bold"
                                android:gravity="left"
                                android:textSize="15dp"
                                android:textColor="#696969"
                                android:fontFamily="@font/dmsans">

                            </TextView>
                            <LinearLayout
                                android:layout_width="280dp"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Status: Upcoming"
                                    android:textStyle="bold"
                                    android:gravity="left"
                                    android:textSize="12dp"
                                    android:textColor="#737373"
                                    android:fontFamily="@font/dmsans"/>
                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Date: 10/26/2024"
                                    android:textStyle="bold"
                                    android:gravity="left"
                                    android:textSize="12dp"
                                    android:textColor="#737373"
                                    android:fontFamily="@font/dmsans"/>
                                <TextView
                                    android:layout_marginBottom="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Time: 12:00 - 14:00 PST"
                                    android:textStyle="bold"
                                    android:gravity="left"
                                    android:textSize="12dp"
                                    android:textColor="#737373"
                                    android:fontFamily="@font/dmsans"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <Button
                                        android:id="@+id/buttonEdit"
                                        style="@style/Button.Purple"
                                        android:layout_width="130dp"
                                        android:padding="0dp"
                                        android:fontFamily="@font/dmsans"
                                        android:layout_height="30dp"
                                        android:backgroundTint="#8A00C2"
                                        android:textSize="13sp"
                                        android:minHeight="0dp"
                                        android:minWidth="0dp"
                                        android:text="Edit Reservation"
                                        app:cornerRadius="6dp" />
                                    <Button
                                        android:id="@+id/buttonCancelReservation"
                                        android:layout_width="130dp"
                                        android:padding="0dp"
                                        android:fontFamily="@font/dmsans"
                                        android:layout_marginLeft="10dp"
                                        android:layout_height="30dp"
                                        android:backgroundTint="#990000"
                                        android:textSize="13sp"
                                        android:minHeight="0dp"
                                        android:minWidth="0dp"
                                        android:text="Cancel Reservation"
                                        app:cornerRadius="6dp" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="0dp"
                android:layout_height="1dp"
                android:id="@+id/separator2"
                android:visibility="visible"
                android:background="#868686"/>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Past Reservations"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:textSize="15dp"
                        android:fontFamily="@font/dmsans">
                    </TextView>
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="200dp"
                        app:srcCompat="@drawable/uparrow"
                        />

                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"

                    app:cardUseCompatPadding="true"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="9dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id = "@+id/pastbox0"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/pasttoggle0"
                            android:layout_width="14dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="10dp"
                            app:srcCompat="@drawable/uparrow"
                            />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Taper Hall"
                                android:textStyle="bold"
                                android:gravity="left"
                                android:textSize="15dp"
                                android:textColor="#696969"
                                android:fontFamily="@font/dmsans">

                            </TextView>
                            <LinearLayout
                                android:layout_width="280dp"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Status: Completed"
                                    android:textStyle="bold"
                                    android:gravity="left"
                                    android:textSize="12dp"
                                    android:textColor="#737373"
                                    android:fontFamily="@font/dmsans"/>
                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Date: 10/26/2024"
                                    android:textStyle="bold"
                                    android:gravity="left"
                                    android:textSize="12dp"
                                    android:textColor="#737373"
                                    android:fontFamily="@font/dmsans"/>
                                <TextView
                                    android:layout_marginBottom="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Time: 12:00 - 14:00 PST"
                                    android:textStyle="bold"
                                    android:gravity="left"
                                    android:textSize="12dp"
                                    android:textColor="#737373"
                                    android:fontFamily="@font/dmsans"/>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="0dp"
                android:layout_height="1dp"
                android:id="@+id/separator3"
                android:visibility="visible"
                android:background="#868686"/>
            <Button
                android:id="@+id/buttonLogOut"
                android:layout_width="90dp"
                android:padding="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:layout_height="35dp"
                android:backgroundTint="#FFFFFF"
                app:strokeColor = "#000000"
                app:strokeWidth="1dp"
                android:textSize="13sp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="Log out"
                android:textColor="#000000"
                android:fontFamily="@font/dmsans"
                app:cornerRadius="6dp" />



        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/nav1"
            android:layout_width="205dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/navbarprof1" />

        <ImageView
            android:id="@+id/nav2"
            android:layout_width="205dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/navbar2" />
    </LinearLayout>


</LinearLayout>